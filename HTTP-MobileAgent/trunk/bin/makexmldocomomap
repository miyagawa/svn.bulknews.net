#!/usr/bin/perl -w
use strict;
use Jcode;
use LWP::Simple;
use Data::Dumper;
use HTTP::MobileAgent;
require XML::Simple;

my $URL = 'http://www.nttdocomo.co.jp/p_s/imode/spec/ryouiki.html';

do_task(@ARGV);

sub do_task {
    my $html = Jcode->new(get($URL))->tr('£°-£¹', '0-9')->euc;
    $html =~ s/\n+/\n/g;
    my $re = regexp();
    my %map;
    while ($html =~ /$re/gs) {
	my($model, $width, $height, $color, $depth) = ($1, $2, $3, $4, $5);
	$map{uc($model)} = {
	    width => $width,
	    height => $height,
	    color => $color eq '¥«¥é¡¼',
	    depth => $depth,
	};
    }
    output_code(\%map);
}

sub output_code {
    my($map) = @_;
    my $xml = XML::Simple->new;
    printf <<'TEMPLATE', $xml->XMLout($map);
<?xml version="1.0" ?>
%s
TEMPLATE
    ;
}

sub regexp {
    return <<'RE';
<TD><FONT SIZE="2">([A-Z]+\d+\w*)</FONT></TD>
<TD><FONT SIZE="2">.*?</FONT></TD>
<TD><FONT SIZE="2">.*?</FONT></TD>
<TD><FONT SIZE="2">(.*?)¡ß(.*?)</FONT></TD>
<TD><FONT SIZE="2">.*?</FONT></TD>
<TD><FONT SIZE="2">(Çò¹õ|¥«¥é¡¼)(\d+)(?:¿§|³¬Ä´)</FONT></TD>
RE
    ;
}
